<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TableRow>
        
        <ImageView 
            android:id="@+id/ivwCategoryIcon" 
            android:layout_width="wrap_content"
            android:contentDescription="@string/category_icon_description" />
        
        <TextView
            android:id="@+id/tbxCategoryTitle"
            android:layout_width="wrap_content" />
        
        <TextView
            android:id="@+id/tbxCategoryCount"
            android:layout_width="wrap_content" />
    </TableRow>
	<TableRow>
        <TextView 
            android:id="@+id/tbxCategoryModified"
            android:layout_width="wrap_content" />
        <TextView
            android:id="@+id/tbxCategoryDescription"
            android:layout_width="wrap_content" />
	</TableRow>
</TableLayout>
