<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp" 
    android:background="@drawable/tab_header_background">
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="8dp"
        android:background="@android:color/transparent" />
    
    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|center_horizontal" >
        <ImageView
            android:id="@+id/ivwTabIcon"
            android:contentDescription="@string/category_icon_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
        
    <TextView
        android:id="@+id/tbxTabTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="14sp"
        android:padding="2dp" 
        android:layout_gravity="center_vertical|center_horizontal"
        android:text="@string/app_name" 
        android:textColor="@drawable/tab_header_foreground"/>
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="4dp"
        android:background="@drawable/tab_header_led" />

</LinearLayout>
